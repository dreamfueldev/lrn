{
  "name": "@lrn/cli",
  "version": "0.0.1",
  "description": "Universal CLI for learning and querying programming interfaces",
  "type": "module",
  "bin": {
    "lrn": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "specs": "vitest run --reporter=json 2>/dev/null | node scripts/format-specs.js",
    "specs:json": "vitest run --reporter=json"
  },
  "dependencies": {
    "@lrn/core": "workspace:*",
    "@lrn/schema": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "vitest": "^2.0.0"
  }
}
